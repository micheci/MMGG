<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MMGG</title>
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <script src="js/fetch.js"></script>
    <link rel="stylesheet" href="../js/css/index.css">

    

</head>
<body >
     <h1 class="text-2xl">MMGG</h1>

    <div class="md:container md:mx-auto rounded flex border justify-center border-black ">

        <div class="grid ">
        <label for="regionMenu decoration-black">Region</label>
        <select name="regions" id="regions">
            <option value="0">Brazil</option>
            <option value="1">Europe North & East</option>
            <option value="2">Europe West</option>
            <option value="3">Japan</option>
            <option value="4">Korea</option>
            <option value="5">LAN</option>
            <option value="6">LAS</option>
            <option value="7">North America</option>       
            <option value="8">Oceania</option>
            <option value="9">Turkey</option>
            <option value="10">Russia</option>
            <option value="11">Phillippines</option>
            <option value="12">Singapore</option>
            <option value="13">Thailand</option>
        </select>
    </div>
   
    <div class="grid flex-1 w-64">
        <label for="summonerName">Summoner Name:</label>
        <input  class="flex-1 w-64" type="text" id="summonerName"/>
    </div>

    <label for="searchSummoner"></label>
    <button class="rounded bg-blue-500 border border-blue-700" onclick="searchSummoner()">Search Summoner</button>
    </div>

    <!-- Pic --> <!-- Name/level -->
    <div class="md:container md:mx-auto border ">
        <div class="flex">
            <img class="w-24" id="summoner_pic" src="../js/images/riotLogo.jpg" alt="summoner pic">
            <div class="pl-6" id="summoner_name">Summoner Name</div>
        </div>
        <div class="pl-8 " id="summoner_level">3</div> 
    </div>

    <!-- Region -->
    
    
    <!-- <div id="regionPicked"></div> -->

    <div id="error"></div>

  

    <!-- Tier/rank/lp -->
    <div class="md:container md:mx-auto border flex ">
        <img class="w-24" id="tier_pic" src="../js/images/LeagueFillerRankspic.jpg" alt="tier pic">
        <div class="container text-2xl ">
        <h3>Tier:<div id="tier">-</div></h3>
        <h3>Rank:<div id="rank">-</div></h3>
        </div>
        <div class="container text-2xl">
        <h3>LP:<div id="LP">-</div></h3>
        <h3>Winrate<div id="winrate">-</div></h3>
        </div>
        <div class="container text-2xl">
            <h3>Wins:<div id="wins">0</div></h3>
            <h3>Loses:<div id="losses">0</div></h3>
            </div>
    </div>

    <!-- Wins loss -->
    <div class="md:container md:mx-auto border">
        
    </div>



   
  




</body>
</html>